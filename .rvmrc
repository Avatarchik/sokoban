rvm_install_on_use_flag=1

# install the last version of RVM and reload
rvm get latest
rvm reload

# use the ruby version 1.9.2 (could be different, type "rvm list known" to see all the versions)
rvm use 1.9.2

# If JRuby is used, specify which version of Ruby you want it to execute
export JRUBY_OPTS=--1.9

# install bundler and use it to install all the gemfile gems
gem install bundler
bundle install | grep -v 'Using' | cd .. -v 'complete' | sed '/^$/d'