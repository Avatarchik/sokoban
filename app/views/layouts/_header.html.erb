  <div id="limited-header">

    <div id="title">
      <h1><%= link_to 'Sokoban', :root %></h1>
    </div>

    <div id="menus">
      <ul>
        <% if current_user %>
          <li class="name fb_logged" id="user-infos" data-id="<%= current_user.id %>">
