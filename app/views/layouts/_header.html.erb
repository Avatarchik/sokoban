              <span class="fb_img">
                <%= image_tag current_user.profile_picture, :title => current_user.name %>
              </span>
              <span>User profile</span>
            </div>
          </li>
        <% else %>
          <li class="name fb_login">
            <div>
              <span>Login with Facebook</span>
            </div>
          </li>
        <% end %>

        <!---
        <li class="challenges-menu"><i class="icon-trophy"></i>&nbsp;Challenges</li>
