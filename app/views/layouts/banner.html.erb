<% if current_user %>

  <div id="banner" class="banner-friends">
    <div id="limited-banner">
      <% subscribed_friends_and_me = current_user.subscribed_friends_and_me %>
      
      <% # no subscribed friends %>
      <% if subscribed_friends_and_me.length == 1 %>
        <% f_url = facebook_send_message_url(current_user) %>
        <%= link_to "INVITE YOUR FRIENDS", f_url, :class => 'invite-friends popup' %>
      <% end %>
      
      <% # list of subscribed friends and me %>
      <% subscribed_friends_and_me.each do |friend| %>
        <%= image_tag friend.profile_picture, :class => 'tips', :title => "#{friend.name} - #{friend.won_levels_count(@pack)}" %>
        <span style="display:none" title="<%= friend.id %>">
          <% # won levels ids of current pack OR every won levels id %>
          <%= friend.won_levels_ids(@pack).join(',') %>
        </span>
      <% end %>
      
      <% # invite more friends %>
      <% if not subscribed_friends_and_me.length == 1 %>
        <% f_url = facebook_send_message_url(current_user) %>
        <%= link_to "...", f_url, :class => 'small-invite-friends popup', :title => 'Invite more friends' %>
      <% end %>
    </div>
    <div style="clear:both"></div>
  </div>  

<% else %>

  <div id="banner" class="banner-text">
    PLAY SOKOBAN AND CHALLENGE YOUR FRIENDS
  </div>

<% end %>