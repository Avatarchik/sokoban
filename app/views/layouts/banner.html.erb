<% if current_user %>

  <div id="banner" class="banner-friends">
    <div id="limited-banner">
      <% subscribed_friends = current_user.subscribed_friends %>
      
      <% if subscribed_friends.empty? %>
        <%= f_url = facebook_send_message_url(current_user) %>
        <%= link_to "INVITE YOUR FRIENDS", f_url, :class => 'invite-friends' %>
      <% end %>
      
      <% subscribed_friends.each do |friend| %>
        <%= image_tag friend.profile_picture, :title => friend.name %>
      <% end %>
      <% if not subscribed_friends.empty? %>
        <%= link_to "invite more friends...", f_url, :class => 'invite-friends' %>
      <% end %>
    </div>
    <div class="clear:both"></div>
  </div>  

<% else %>

  <div id="banner" class="banner-text">
    PLAY SOKOBAN AGAINST YOUR FRIENDS
  </div>

<% end %>