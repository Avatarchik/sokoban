<% if current_user %>

  <div id="banner" class="banner-friends">
    <div id="limited-banner">
      <% subscribed_friends_and_me = current_user.subscribed_friends_and_me(@pack) %>
      
      <% # list of subscribed friends and me %>
      <% subscribed_friends_and_me.each do |friend| %>
        <%= image_tag friend.profile_picture, :class => 'tips', :title => "#{friend.name} - #{friend.won_levels_count(@pack)}" %>
        <span style="display:none" data-user-id="<%= friend.id %>">
          <% # won levels ids of current pack OR every won levels id %>
          <%= friend.won_levels_ids(@pack).join(',') %>
        </span>
      <% end %>
      
      <% # invite more friends %>
      <% f_url = facebook_send_message_url(current_user) %>
      <%= link_to image_tag('add_friend.png'), f_url, :class => 'tips popup', :title => 'Invite more friends' %>
    </div>
    <div style="clear:both"></div>
  </div>  

<% else %>

  <div id="banner" class="banner-text">
    PLAY SOKOBAN AND CHALLENGE YOUR FRIENDS
  </div>

<% end %>