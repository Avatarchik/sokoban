<%= javascript_include_tag 'users/index' %>

<div id="limited-content">

  <div id="ranking-buttons">
    <a href="<%= friends_ranking_path %>">Friends</a>
    <a href="<%= rankings_path %>">Global</a>
  </div>

  <div style="clear:both">
  </div>

  <table id="ladder">
    <% list = params[:type] == 'global' ? @ladder[:top_users] : @ladder[:top_friends] %>
    <% list.each_with_index do |user, i| %>
      <tr class="<%= 'selected' if user.id == current_user.id %>">
        <td class="num">
          <%= i+1 %>
        </td>
        <td class="picture">
          <img src="<%= user.profile_picture %>"/>
        </td>
        <td class="name">
          <%= user.name %>
        </td>
        <td class="score">
          <span><%= user.total_won_levels %></span> solved levels
        </td>
      </tr>
    <% end %>
  </table>
</div>
