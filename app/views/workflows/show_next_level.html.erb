<%= javascript_include_tag "workflows" %>

<div id="game-won">
  <div class="game-won-in">
    <div class="game-won-in-left">
      <h3>Level successfully completed!</h3>
      <div id="final-score" class="score">
        <div class="score-pushes"> <span class="num"><%= @score.pushes %></span><br/>pushes</div>
        <div class="score-moves"> <span class="num"><%= @score.moves %></span><br/>moves</div>
      </div>

      <% @ladder.each do |score| %>
        <div class="final-score-item">
          <div class="score-position"><%= score.position %></div>
          <div class="score-picture">
            <%= link_to image_tag(score.user.profile_picture, :width => '50px', :class => 'tips', :title => "#{score.user.name} - #{score.user.won_levels_count()}"), score.user.f_link %>
          </div>
          <div class="score-name">
            <%= link_to score.user.name, score.user.f_link, :title => score.user.name %>
          </div>
          <div class="score-pushes">
            <p><strong><%= score.pushes %></strong> pushes (<%= score.moves %>)</p>
          </div>
        </div>
      <% end %>
    </div>
    <div class="game-won-in-right">
      <div class="game-catch"> Ad 300 x 250</div>

      <div class="challenge-user">
        <div class="challenge-user-picture"> <a href="http://www.facebook.com/michael.hoste"><img alt="371650_634478837_38342687_q" src="https://fbcdn-profile-a.akamaihd.net/hprofile-ak-snc7/371650_634478837_38342687_q.jpg" title="Michaël Hoste" /></a> </div>
        <h2 class="challenge-small-title">Challenge</h2>
        <div class="challenge-user-name"> <a href="http://www.facebook.com/michael.hoste" title="Michaël Hoste">Michaël Hoste</a> </div>
      </div>

      <ul class="game-actions">
        <li class="game-action-retry"><a href="#">Retry</a></li>
        <li class="game-action-next"><a href="#">Next</a></li>
      </ul>
    </div>
  </div>
  <div style="clear:both">
  </div>
</div>
