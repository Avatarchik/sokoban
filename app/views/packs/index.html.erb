<%= javascript_include_tag 'packs/index' %>

<% @packs.each do |pack| %>
  <div class="pack">
    <div class="pack-title" data-pack-name="<%= pack.name %>">
      <%= link_to pack.name, "/packs/#{pack.name}" %>
    </div>
        
    <ul class="levels">
  
      <% won_levels_ids = Pack.won_levels_ids(current_user) %>  
      <% pack.levels.each_with_index do |level| %>
        <li id="level-<%= level.id %>" data-level-name="<%= level.name %>">
          <% if won_levels_ids.include?(level.id) %>
            <span class="star icon-star"></span>
          <% else %>
            <span class="star icon-star-empty"></span>
          <% end %>
        </li>
      <% end %>
      
    </ul>  
  </div>
<% end %>
