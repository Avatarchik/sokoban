<% @packs.each do |pack| %>
  <div class="pack">
    <div class="pack-title">
      <%= link_to pack.name, "/packs/#{pack.name}" %>
    </div>
        
    <ul id="levels">
      
      <% pack.levels.each_with_index do |level, i| %>
        <li>
          <% # if won_levels_ids.include?(level.id) %>
            <span class="star icon-star"></span>
          <% # else %>
            <span class="star icon-star-empty"></span>
          <% # end %>
          <span class="level-id"><%= i %></span>
        </li>
      <% end %>
      
    </ul>  
  </div>
<% end %>